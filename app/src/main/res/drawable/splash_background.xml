<?xml version="1.0" encoding="utf-8"?>
<!-- The android:opacity=”opaque” line — this is critical in preventing a flash of black as your theme transitions. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:opacity="opaque">

    <item android:drawable="@color/activityBackgroundDark"/>

    <!--
         We need to use a seperate scaled vector drawable since it isn't possible to scale a vector drawable.
         Scaled Drawable doesn't seem to work either. android:width and android:height attributes are only
         available in API 23+
     -->
    <item android:drawable="@drawable/splash_scaled_logo" android:gravity="center" />

</layer-list>